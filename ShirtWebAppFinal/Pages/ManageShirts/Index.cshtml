@page
@model ShirtWebAppFinal.Pages.ManageShirts.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShirtModel[0].ShirtName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShirtModel[0].FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShirtModel[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShirtModel[0].Sizes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ShirtModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShirtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sizes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ShirtModelId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ShirtModelId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ShirtModelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
